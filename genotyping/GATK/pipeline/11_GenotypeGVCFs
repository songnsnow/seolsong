gatk --java-options "-Xmx4g" GenotypeGVCFs \
    -R /data/project/RCC_PBMC_HWS/workflow/bulk/vcf_extraction/references/Homo_sapiens_assembly38.fasta \
    -V /data/project/mRCC/analysis/bulk_vcf/outs/mRCC.g.vcf.gz \
    -O /data/project/mRCC/analysis/bulk_vcf/outs/mRCC.vcf.gz

# decompress vcf.gz ; no need to decompress index file
gzip -d /data/project/mRCC/analysis/bulk_vcf/outs/mRCC.vcf.gz





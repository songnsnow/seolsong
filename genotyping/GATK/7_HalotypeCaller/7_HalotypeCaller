
#HalotypeCaller--------------------------------------------------------------------
#download intervals
wget https://storage.googleapis.com/gatk-test-data/intervals/star.gencode.v19.transcripts.patched_contigs.gtf
wget https://storage.googleapis.com/genomics-public-data/resources/broad/hg38/v0/wgs_calling_regions.hg38.interval_list

gatk --java-options "-Xms6000m -XX:GCTimeLimit=50 -XX:GCHeapFreeLimit=10" \
    HaplotypeCaller \
    -R /home/songnsnow/download/STAR_run/reference/Homo_sapiens_assembly38.fasta \
    -I /data/project/RCC_HWS/SS/bulk/STAR/outs/CSB/CSBbqsr.bam \
    -L /home/songnsnow/download/STAR_run/reference/wgs_calling_regions.hg38.interval_list \
    -O /data/project/RCC_HWS/SS/bulk/STAR/outs/CSB/CSB0.g.vcf.gz \
    -dont-use-soft-clipped-bases \
    -stand-call-conf 20 \
    -D /home/songnsnow/download/STAR_run/reference/Homo_sapiens_assembly38.dbsnp138.vcf

gatk --java-options "-Xms6000m -XX:GCTimeLimit=50 -XX:GCHeapFreeLimit=10" \
